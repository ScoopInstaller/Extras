    "post_install": [
        "if (((-not(Test-Path Env:JAVA_HOME)) -or (-not(Test-Path $Env:JAVA_HOME))) {",
        "   Write-Output 'Java Runtime Environment is required to run xdman but not found, please type and run:'",
        "   Write-Output '     scoop install java/oraclejre'",
        "   Write-Output 'or:  scoop install java/openjdk'",
        "   Write-Output 'to install JRE or JDK.'",
        "}"
    ],
    "checkver": {
        "url": "http://xdman.sourceforge.net/",
        "re": "(?:\\s+<h3\\s+style=\"text-align:\\s+center;\">Latest Release\\s+-\\s+XDM\\s+(?<year>\\d\\d\\d\\d)\\s+Version\\s+)((\\d+\\.)\\d+)(?:\\+</h3>)"
    },
    "autoupdate":{
        "url": "http://xdman.sourceforge.net/xdman.jar"
    }
