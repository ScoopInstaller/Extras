{
    "version": "52.0.0",
    "description": "A set of tools to create, alter and inspect Matroska files.",
    "homepage": "https://mkvtoolnix.download",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://mkvtoolnix.download/windows/releases/52.0.0/mkvtoolnix-64-bit-52.0.0.7z",
            "hash": "sha512:2d3fc54a7adeeea36b6e90869d423d48bc303c8e39b2152123519cb77acc3b3367acd8506463a790fa0223c1e32ff7bebd6bdaf92985b850ec70ee8d034b7666"
        },
        "32bit": {
            "url": "https://mkvtoolnix.download/windows/releases/52.0.0/mkvtoolnix-32-bit-52.0.0.7z",
            "hash": "sha512:c5423481ba318bedf46920ba8a5798bfaa1109951423e66fc2d46c7e30754eb42fa04b58e743d4436c8d4b6283a8448f068ee1d9b4df8a5305fc2084817c6903"
        }
    },
    "extract_dir": "mkvtoolnix",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\mkvtoolnix-gui.ini\")) {",
        "    Set-Content \"$dir\\mkvtoolnix-gui.ini\" @('[settings]', 'updates\\checkForUpdates=false') -Encoding Ascii",
        "} else {",
        "    # Persist mkvtoolnix-gui.ini manully because symlink doesn't work.",
        "    Copy-Item \"$persist_dir\\mkvtoolnix-gui.ini\" \"$dir\"",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\mkvtoolnix-gui.ini\") {",
            "    Copy-Item \"$dir\\mkvtoolnix-gui.ini\" \"$persist_dir\" -Force",
            "}"
        ]
    },
    "bin": [
        "mkvextract.exe",
        "mkvinfo.exe",
        "mkvmerge.exe",
        "mkvpropedit.exe",
        "mkvtoolnix-gui.exe"
    ],
    "shortcuts": [
        [
            "mkvtoolnix-gui.exe",
            "MKVToolNix GUI"
        ]
    ],
    "persist": [
        "cache",
        "jobQueue"
    ],
    "checkver": "Released v([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-64-bit-$version.7z"
            },
            "32bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-32-bit-$version.7z"
            }
        },
        "hash": {
            "url": "$baseurl/sha512sums.txt"
        }
    }
}
