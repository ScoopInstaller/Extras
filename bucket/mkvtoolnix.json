    "architecture": {
        "64bit": {
            "url": "https://mkvtoolnix.download/windows/releases/51.0.0/mkvtoolnix-64-bit-51.0.0.7z",
            "hash": "sha512:b3a77d23c0a9ca2949725c8f928bcb93fb84df5839c5a04bc867a8a9d3bddf091ea051f49174a7596895c7d97fd7fb740b8c1af788cba51c098c8732edd4e8ae"
        },
        "32bit": {
            "url": "https://mkvtoolnix.download/windows/releases/51.0.0/mkvtoolnix-32-bit-51.0.0.7z",
            "hash": "sha512:8a24f519ac3c187f7e7082ac90ecc68b89c75de96802c8157b2ec7e50126067f5e4dc4936c7c6e3069c33b0513746c349559e9d16ca8c9a6016030df0b107c6c"
        }
    },
    "extract_dir": "mkvtoolnix",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\mkvtoolnix-gui.ini\")) {",
        "    Set-Content \"$dir\\mkvtoolnix-gui.ini\" @('[settings]', 'updates\\checkForUpdates=false') -Encoding Ascii",
        "} else {",
        "    # Persist mkvtoolnix-gui.ini manully because symlink doesn't work.",
        "    Copy-Item \"$persist_dir\\mkvtoolnix-gui.ini\" \"$dir\"",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\mkvtoolnix-gui.ini\") {",
            "    Copy-Item \"$dir\\mkvtoolnix-gui.ini\" \"$persist_dir\" -Force",
            "}"
        ]
    },
    "bin": [
        "mkvextract.exe",
        "mkvinfo.exe",
        "mkvmerge.exe",
        "mkvpropedit.exe",
        "mkvtoolnix-gui.exe"
    ],
    "shortcuts": [
        [
            "mkvtoolnix-gui.exe",
            "MKVToolNix GUI"
        ]
    ],
    "persist": [
        "cache",
        "jobQueue"
    ],
    "checkver": "Released v([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-64-bit-$version.7z"
            },
            "32bit": {
                "url": "https://mkvtoolnix.download/windows/releases/$version/mkvtoolnix-32-bit-$version.7z"
            }
        },
        "hash": {
            "url": "$baseurl/sha512sums.txt"
        }
    }
}
