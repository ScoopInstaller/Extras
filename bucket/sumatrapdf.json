{
    "version": "3.2",
    "description": "PDF and eBook reader",
    "homepage": "https://www.sumatrapdfreader.org",
    "license": "GPL-3.0-only,BSD-2-Clause",
    "architecture": {
        "64bit": {
            "url": "https://kjkpubsf.sfo2.digitaloceanspaces.com/software/sumatrapdf/rel/SumatraPDF-3.2-64.zip",
            "hash": "19a210f0fb0bebd9338ab4148a5c710d3e8ea8e57576c1052ecc351972ffa93c"
        },
        "32bit": {
            "url": "https://kjkpubsf.sfo2.digitaloceanspaces.com/software/sumatrapdf/rel/SumatraPDF-3.2.zip",
            "hash": "7262ef7611bc47a6b5027fda0000b0ba1de22211432885c3425b5a5a1ee4d441"
        }
    },
    "pre_install": [
        "$file = 'SumatraPDF-settings.txt'",
        "if (!(Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    Set-Content \"$dir\\$file\" 'CheckForUpdates = false' -Encoding Ascii",
        "}",
        "Get-ChildItem \"$dir\\SumatraPDF-*.exe\" | Rename-Item -NewName 'SumatraPDF.exe'"
    ],
    "bin": "SumatraPDF.exe",
    "shortcuts": [
        [
            "SumatraPDF.exe",
            "SumatraPDF"
        ]
    ],
    "persist": [
        "SumatraPDF-settings.txt",
        "sumatrapdfcache"
    ],
    "checkver": {
        "url": "https://www.sumatrapdfreader.org/news.html",
        "regex": "([\\d.]+)\\s+\\(\\d+"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://kjkpubsf.sfo2.digitaloceanspaces.com/software/sumatrapdf/rel/SumatraPDF-$version-64.zip"
            },
            "32bit": {
                "url": "https://kjkpubsf.sfo2.digitaloceanspaces.com/software/sumatrapdf/rel/SumatraPDF-$version.zip"
            }
        }
    }
}
