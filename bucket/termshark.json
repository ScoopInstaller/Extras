    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gcla/termshark/releases/download/v$version/termshark_$version_windows_x64.zip",
                "extract_dir": "termshark_$version_windows_x64"
            }
