{
    "homepage": "https://webtorrent.io/desktop/",
    "description": "A peer-to-peer streaming torrent client written completely in JavaScript.",
    "version": "0.20.0",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v0.20.0/WebTorrent-0.20.0-full.nupkg",
            "hash": "sha1:2CFE5124C24E70CC0BAFF535BA929F77A3723A29"
        },
        "32bit": {
            "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v0.20.0/WebTorrent-0.20.0-ia32-full.nupkg",
            "hash": "sha1:21B1CC158D4035DEEBCDC5B08DB8F2D4A37DC238"
        }
    },
    "extract_dir": "lib\\net45",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\Portable Settings\")) {",
        "    New-Item \"$dir\\Portable Settings\\Downloads\" -ItemType 'Directory' -Force | Out-Null",
        "    foreach ($data in @(\"$env:Appdata\\WebTorrent\", \"$env:LocalAppdata\\WebTorrent\")) {",
        "        if (Test-Path $data) {",
        "            Write-Host -F yellow \"Copying old '$data' to '$persist_dir\\Portable Settings'\"",
        "            Copy-Item \"$data\\*\" \"$dir\\Portable Settings\" -Recurse -Force",
        "        }",
        "    }",
        "}"
    ],
    "bin": "WebTorrent.exe",
    "shortcuts": [
        [
            "WebTorrent.exe",
            "WebTorrent"
        ]
    ],
    "suggest": {
        "VLC": "extras/vlc"
    },
    "checkver": {
        "github": "https://github.com/webtorrent/webtorrent-desktop"
    },
    "persist": "Portable Settings",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v$version/WebTorrent-$version-full.nupkg",
                "hash": {
                    "url": "$baseurl/RELEASES"
                }
            },
            "32bit": {
                "url": "https://github.com/webtorrent/webtorrent-desktop/releases/download/v$version/WebTorrent-$version-ia32-full.nupkg",
                "hash": {
                    "url": "$baseurl/RELEASES-ia32"
                }
            }
        }
    }
}
