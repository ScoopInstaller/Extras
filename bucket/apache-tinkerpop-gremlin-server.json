{
    "version": "3.8.0",
    "description": "Remotely execute Gremlin against one or more Graph instances hosted within it.",
    "homepage": "https://tinkerpop.apache.org",
    "license": "Apache-2.0",
    "url": "https://downloads.apache.org/tinkerpop/3.8.0/apache-tinkerpop-gremlin-server-3.8.0-bin.zip",
    "hash": "sha512:6140c16a7ba73cb74039aec2d68c78bbd96bb56945d1f3001656dbcdcd2499be4ddeb996cba8ba2d2c95ce6bd0a870f7ec262d32fd94097a9dff7937f9f96c87",
    "extract_dir": "apache-tinkerpop-gremlin-server-3.8.0",
    "pre_install": [
        "$cont = @(",
        "    '@echo off'",
        "    'cd /d \"%~dp0\"'",
        "    'gremlin-server.bat'",
        ")",
        "Set-Content \"$dir\\bin\\gremlin-server-scoop.bat\" $cont -Encoding ascii"
    ],
    "bin": [
        [
            "bin\\gremlin-server-scoop.bat",
            "gremlin-server"
        ]
    ],
    "checkver": {
        "url": "https://downloads.apache.org/tinkerpop/",
        "regex": "href=\"([\\d.]+)/",
        "reverse": true
    },
    "autoupdate": {
        "url": "https://downloads.apache.org/tinkerpop/$version/apache-tinkerpop-gremlin-server-$version-bin.zip",
        "hash": {
            "url": "$url.sha512"
        },
        "extract_dir": "apache-tinkerpop-gremlin-server-$version"
    }
}
