{
    "version": "7.14.2",
    "description": "Open-source software for volunteer and grid computing",
    "homepage": "https://boinc.berkeley.edu/",
    "license": "LGPL-3.0-or-later",
    "depends": "isx",
    "architecture": {
        "64bit": {
            "url": "https://boinc.berkeley.edu/dl/boinc_7.14.2_windows_x86_64.exe",
            "hash": "a8dfa47c58dcf54d29e77434c1fb5a0e7bfdea66b5f5c128a91104449c263987",
            "installer": {
                "script": [
                    "isx \"$dir\\$fname\"",
                    "$isxextractdir = ((gci \"$dir\" | ? { $_.PSIsContainer } | sort CreationTime)[-1]).Name",
                    "Expand-MsiArchive \"$dir\\$isxextractdir\\BOINC.msi\" \"$dir\" -ExtractDir 'Program Files 64\\BOINC'",
                    "Remove-Item -LiteralPath \"$dir\\$fname\" -Force",
                    "Remove-Item -LiteralPath \"$dir\\$isxextractdir\" -Force -Recurse"
                ]
            }
        }
    },
    "bin": "boinccmd.exe",
    "shortcuts": [
        [
            "boinc.exe",
            "BOINC Client"
        ],
        [
            "boincmgr.exe",
            "BOINC Manager"
        ],
        [
            "boincscr.exe",
            "BOINC Screensaver"
        ]
    ],
    "checkver": {
        "url": "https://boinc.berkeley.edu/download_all.php?xml=1",
        "xpath": "/versions/version[contains(.,'windows_x86_64')]/version_num"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://boinc.berkeley.edu/dl/boinc_$version_windows_x86_64.exe"
            }
        }
    }
}
