    "persist": [
        "res\\conf.txt",
        "res\\conf-lastgood.txt",
        "res\\bookmarks.txt",
        "res\\altconf.txt",
        "res\\custedit.txt"
    ],
    "bin": "peazip.exe",
    "shortcuts": [
        [
            "peazip.exe",
            "PeaZip"
        ]
    ],
    "pre_install": [
        "if(!(Test-Path \"$dir\\res\\bookmarks.txt\")) { Add-Content \"$dir\\res\\bookmarks.txt\" $null }",
        "if(!(Test-Path \"$dir\\res\\custedit.txt\")) { Add-Content \"$dir\\res\\custedit.txt\" $null }"
    ],
    "checkver": {
        "url": "https://osdn.net/projects/peazip/",
        "regex": "<a href=\"/projects/peazip/releases/(?<release>[\\d]*)\">peazip ([\\d+\\.*]+)</a>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://osdn.net/frs/redir.php?m=dotsrc&f=peazip/$matchRelease/peazip_portable-$version.WIN64.zip#/dl.7z",
                "hash": {
                    "url": "https://osdn.net/projects/peazip/downloads/$matchRelease/peazip_portable-$version.WIN64.zip",
                    "regex": "<dt>SHA256</dt>\\n[\\t ]*<dd>([0-9a-fA-F]{32})</dd>"
                },
                "extract_dir": "peazip_portable-$version.WIN64"
            },
            "32bit": {
                "url": "https://osdn.net/frs/redir.php?m=dotsrc&f=peazip/$matchRelease/peazip_portable-$version.WINDOWS.zip#/dl.7z",
                "hash": {
                    "url": "https://osdn.net/projects/peazip/downloads/$matchRelease/peazip_portable-$version.WINDOWS.zip",
