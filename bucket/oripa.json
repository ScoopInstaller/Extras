{
    "version": "0.36",
    "homepage": "http://mitani.cs.tsukuba.ac.jp/oripa/",
    "description": "Drawing software dedicated to designing the crease patterns of origami",
    "license": "GPL-3.0-or-later",
    "url": "https://github.com/oripa/oripa/releases/download/v0.36/oripa-0.36.jar#/oripa.jar",
    "hash": "5e72f6aea5722e80a11fa8098cf3cd1f9c21be67014da39360abf640be194ebc",
    "pre_install": [
        "Expand-7zipArchive \"$dir\\oripa.jar\" -Switches 'icon\\oripa.gif'",
        "Set-Content \"$dir\\oripa.bat\" 'start javaw -jar %~dp0\\oripa.jar %*' -Encoding ASCII",
        "$stream = [System.IO.File]::OpenWrite(\"$dir\\icon.ico\")",
        "$bitmap = [System.Drawing.Image]::FromFile(\"$dir\\icon\\oripa.gif\")",
        "([System.Drawing.Icon]::FromHandle($bitmap.GetHicon())).Save($stream)"
    ],
    "bin": "oripa.jar",
    "shortcuts": [
        [
            "oripa.bat",
            "ORIPA",
            "",
            "icon.ico"
        ]
    ],
    "suggest": {
        "JDK": [
            "java/openjdk",
            "java/oraclejdk"
        ]
    },
    "checkver": {
        "github": "https://github.com/oripa/oripa"
    },
    "autoupdate": {
        "url": "https://github.com/oripa/oripa/releases/download/v$version/oripa-$version.jar#/oripa.jar"
    }
}
