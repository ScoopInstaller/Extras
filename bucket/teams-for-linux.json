{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/scoop/refs/heads/master/schema.json",
    "version": "1.10.2",
    "description": "Unofficial Microsoft Teams client for Linux built with Electron.",
    "homepage": "https://github.com/IsmaelMartinez/teams-for-linux",
    "license": "GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/IsmaelMartinez/teams-for-linux/releases/download/v1.10.2/teams-for-linux-Setup-1.10.2.exe#/teams-for-linux.zip",
            "hash": "sha256:c0a025b797759a91fd4beb2f40482f0c767d5b269a56f538e9d1d4eb789c1366"
        }
    },
    "installer": {
        "script": [
            "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
            "Remove-Item -Path \"$dir\\`$PLUGINSDIR\" -Recurse",
            "Remove-Item -Path \"$dir\\`$R0\" -Recurse"
        ]
    },
    "shortcuts": [
        [
            "teams-for-linux.exe",
            "Teams For Linux",
            "--custom-user-dir \"$persist_dir\\browser-data\""
        ]
    ],
    "persist": [
        "browser-data"
    ],
    "checkver": {
        "url": "https://github.com/IsmaelMartinez/teams-for-linux/releases/latest/download/latest.yml",
        "re": "version: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/IsmaelMartinez/teams-for-linux/releases/download/v$version/teams-for-linux-Setup-$version.exe#/teams-for-linux.zip"
            }
        }
    }
}
