{
    "version": "103.0.1-2",
    "description": "A fork of Firefox, focused on privacy, security and freedom.",
    "homepage": "https://librewolf.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/94300fb0fcdb78865f3cfed8ca6f498b/librewolf-103.0.1-2.en-US.win64-portable.zip",
            "hash": "79decb5465064133618a2888aeed5afabdc971029a9f79e9b60d86dd9e8bf191"
        }
    },
    "pre_install": [
        "$lw_name = (Get-Item \"$dir\\librewolf-*\").FullName",
        "Move-Item \"$lw_name\\*\" \"$dir\"",
        "Remove-Item \"$lw_name\"",
        "if (Test-Path \"$persist_dir\\Librewolf\\*.js\") { Copy-Item \"$persist_dir\\Librewolf\\*.js\" \"$dir\\Librewolf\\\" }"
    ],
    "pre_uninstall": "if (Test-Path \"$dir\\Librewolf\\*.js\") { Copy-Item \"$dir\\Librewolf\\*.js\" \"$persist_dir\\Librewolf\\\" }",
    "bin": [
        [
            "librewolf-portable.exe",
            "librewolf"
        ]
    ],
    "shortcuts": [
        [
            "librewolf-portable.exe",
            "LibreWolf"
        ]
    ],
    "persist": [
        "Profiles",
        "LibreWolf\\defaults\\prefs"
    ],
    "checkver": {
        "url": "https://gitlab.com/api/v4/projects/13852981/releases",
        "jsonpath": "$.[0].assets.links.url",
        "regex": "/uploads/(?<randidsha>[a-f0-9]+)/librewolf-([\\d.-]+)\\.en-US\\.win64-portable\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/$matchRandidsha/librewolf-$version.en-US.win64-portable.zip",
                "hash": {
                    "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/$matchRandidsha/sha256sums.txt",
                    "regex": "$sha256\\s+$basename"
                }
            }
        }
    }
}
