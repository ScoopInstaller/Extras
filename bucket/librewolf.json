{
    "version": "103.0.1-1",
    "description": "A fork of Firefox, focused on privacy, security and freedom.",
    "homepage": "https://librewolf.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/c5782ae771d4ded03bdfc2f4a3850264/librewolf-103.0.1-1.en-US.win64-portable.zip",
            "hash": "783fc1194741f33a695f8ebd9ed5162008e8553a9e329f11210799e567d4002e"
        }
    },
    "pre_install": [
        "$lw_name = (Get-Item \"$dir\\librewolf-*\").FullName",
        "Move-Item \"$lw_name\\*\" \"$dir\"",
        "Remove-Item \"$lw_name\"",
        "if (Test-Path \"$dir\\Librewolf\\*.js\") { Copy-Item \"$dir\\Librewolf\\*.js\" \"$persist_dir\\\" }"
    ],
    "pre_uninstall": "if (Test-Path \"$persist_dir\\Librewolf\\*.js\") { Copy-Item \"$persist_dir\\Librewolf\\*.js\" \"$dir\\\" }",
    "bin": [
        [
            "librewolf-portable.exe",
            "librewolf"
        ]
    ],
    "shortcuts": [
        [
            "librewolf-portable.exe",
            "LibreWolf"
        ]
    ],
    "persist": [
        "Profiles",
        "LibreWolf\\defaults\\prefs"
    ],
    "checkver": {
        "url": "https://gitlab.com/api/v4/projects/13852981/releases",
        "regex": "/uploads/(?<randidsha>[a-f0-9]+)/sha256sums\\.txt.*?/uploads/(?<randidzip>[a-f0-9]+)/librewolf-([\\d.-]+)\\.en-US\\.win64-portable\\.zip\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/$matchRandidzip/librewolf-$version.en-US.win64-portable.zip",
                "hash": {
                    "url": "https://gitlab.com/librewolf-community/browser/windows/uploads/$matchRandidsha/sha256sums.txt",
                    "regex": "$sha256\\s+$basename"
                }
            }
        }
    }
}
