{
    "version": "10.11.6",
    "description": "Software Media System",
    "homepage": "https://jellyfin.org",
    "license": "GPL-2.0-only",
    "suggest": {
        "ffmpeg": "ffmpeg",
        "nssm": "nssm"
    },
    "architecture": {
        "64bit": {
            "url": "https://repo.jellyfin.org/files/server/windows/stable/v10.11.6/amd64/jellyfin_10.11.6-amd64.zip",
            "hash": "md5:c4a2106b35408054c210572ce4097094"
        },
        "arm64": {
            "url": "https://repo.jellyfin.org/files/server/windows/stable/v10.11.6/arm64/jellyfin_10.11.6-arm64.zip",
            "hash": "md5:a5dcdcde7e728838366f6cdc73514bac"
        }
    },
    "extract_dir": "jellyfin",
    "extract_to": "system",
    "installer": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "$targetPath = \"$env:LOCALAPPDATA\\jellyfin\"",
            "$linkType = (Get-Item -Path $targetPath -ErrorAction SilentlyContinue).LinkType",
            "if (Test-Path $targetPath) {",
            "    if ($linkType -eq 'Junction') {",
            "        Remove-Item -Path $targetPath -Force",
            "    } else {",
            "        # $persist takes precedence over $targetPath",
            "        if (-not (Test-Path \"$persist\\*\")) {",
            "            Move-Item \"$targetPath\\*\" $persist -Force -ErrorAction SilentlyContinue",
            "        }",
            "        Remove-Item -Path $targetPath -Force -Recurse",
            "    }",
            "}",
            "New-Item \"$env:LOCALAPPDATA\\jellyfin\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$env:LOCALAPPDATA\\jellyfin\" -Recurse -Force -ErrorAction 'SilentlyContinue'"
    },
    "bin": "system\\jellyfin.exe",
    "shortcuts": [
        [
            "system\\jellyfin.exe",
            "jellyfin"
        ]
    ],
    "persist": "data",
    "checkver": {
        "url": "https://repo.jellyfin.org/?path=/server/windows",
        "regex": "Current Stable \\(v([\\d+.]+)\\)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://repo.jellyfin.org/files/server/windows/stable/v$version/amd64/jellyfin_$version-amd64.zip",
                "hash": {
                    "url": "https://repo.jellyfin.org/?path=/server/windows/stable/v$version/amd64",
                    "regex": "(?sm)$basename.*?$md5"
                }
            },
            "arm64": {
                "url": "https://repo.jellyfin.org/files/server/windows/stable/v$version/arm64/jellyfin_$version-arm64.zip",
                "hash": {
                    "url": "https://repo.jellyfin.org/?path=/server/windows/stable/v$version/arm64",
                    "regex": "(?sm)$basename.*?$md5"
                }
            }
        }
    }
}
