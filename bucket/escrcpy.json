            "    info '[Persistent AppData]: Moving user data...'",
            "    ensure \"$persist_dir\\UserData\" | Out-Null",
            "    Copy-Item \"$env:AppData\\escrcpy\\*\" \"$persist_dir\\UserData\\\" -Recurse -Force -ErrorAction 'SilentlyContinue'",
