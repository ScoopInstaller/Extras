{
    "version": "1.6.9",
    "description": "An advanced freeware audio player for the Windows platform.",
    "homepage": "https://www.foobar2000.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.foobar2000.org/license"
    },
    "suggest": {
        "Encoders": "extras/foobar2000-encoders"
    },
    "url": "https://www.videohelp.com/download/foobar2000_v1.6.9.exe#/dl.7z",
    "hash": "1efc461da260441208d854626c19267c723b34b5935ff74514f0ecdb4a244d94",
    "bin": "foobar2000.exe",
    "shortcuts": [
        [
            "foobar2000.exe",
            "Foobar2000"
        ]
    ],
    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\", \"$dir\\uninstall.exe\" -Force -Recurse",
            "New-Item \"$dir\\portable_mode_enabled\" -Force | Out-Null"
        ]
    },
    "post_install": [
        "if (!(Test-Path \"$persist_dir\\profile\")) {",
        "    New-Item \"$persist_dir\\profile\" -ItemType Directory | Out-Null",
        "    if (Test-Path \"$env:Appdata\\foobar2000\") {",
        "        Write-Host \"Importing files from user directory...\" -ForegroundColor Yellow",
        "        Get-ChildItem -Path \"$env:Appdata\\foobar2000\" | Copy-Item -Destination \"$persist_dir\\profile\" -Force -Recurse",
        "        Get-ChildItem -Path \"$persist_dir\\profile\" -Filter \"LargeFieldsConfig.txt\" -Directory | Remove-Item -Force -Recurse",
        "        Get-ChildItem -Path \"$persist_dir\\profile\" -Filter \"theme.fth\" -Directory | Remove-Item -Force -Recurse",
        "        Get-ChildItem -Path \"$persist_dir\\profile\" -Filter \"version.txt\" -Directory | Remove-Item -Force -Recurse",
        "        Write-Host \"Completed\" -ForegroundColor Green",
        "    }",
        "}",
        "Get-ChildItem -Path \"$persist_dir\" -Exclude \"profile\" | Move-Item -Destination \"$persist_dir\\profile\" -Force",
        "if (Test-Path \"$persist_dir\\profile\\playlists\") {",
        "    Rename-Item -Path \"$persist_dir\\profile\\playlists\" -NewName playlists-v1.4 -Force",
        "}",        
        "$EncodersDir = $(appdir foobar2000-encoders $global)",
        "if (Test-Path \"$EncodersDir\") {",
        "    New-Item \"$dir\\encoders\" -ItemType Junction -Target \"$EncodersDir\\current\" | Out-Null",
        "}"
    ],
    "persist": "profile",
    "checkver": {
        "url": "https://www.foobar2000.org/download",
        "regex": "foobar2000_v([\\d.]+)\\."
    },
    "autoupdate": {
        "url": "https://www.videohelp.com/download/foobar2000_v$version.exe#/dl.7z"
    }
}
