{
    "version": "22.5.1",
    "description": "A fast, lightweight and extensible text editor for Windows. Useful for opening very large files.",
    "homepage": "https://www.emeditor.com/",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://emeditor.blob.core.windows.net/emed64_22.5.1_portable.zip",
            "hash": "3b8bffa399544c83e7ac19c0da9a18d91af590bcd43b1fa6505d1a6b0a260298"
        },
        "32bit": {
            "url": "https://emeditor.blob.core.windows.net/emed32_22.5.1_portable.zip",
            "hash": "c75b22565fd897daf8ab4b1c1fb2a733ea2b6c17fbdf2203b10dff3262cfeb93"
        }
    },
    "pre_install": [
        "$manifest.persist | ForEach-Object {",
        "    if ([io.path]::GetExtension($_)) {",
        "        if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" | Out-Null }",
        "    }",
        "}"
    ],
    "bin": "EmEditor.exe",
    "shortcuts": [
        [
            "EmEditor.exe",
            "EmEditor"
        ]
    ],
    "persist": [
        "eeCommon.ini",
        "eeConfig.ini",
        "eeLM.ini",
        "eePlugins.ini"
    ],
    "checkver": {
        "url": "https://support.emeditor.com/en/downloads",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://emeditor.blob.core.windows.net/emed64_$version_portable.zip"
            },
            "32bit": {
                "url": "https://emeditor.blob.core.windows.net/emed32_$version_portable.zip"
            }
        }
    }
}
