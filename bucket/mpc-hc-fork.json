            "hash": "527528b3ea852e241f2bbe8206dbc1f324f4339d15074a6492f0d6f0ae926df5",
            "bin": [
                [
                    "mpc-hc64.exe",
                    "mpc-hc"
                ]
            ],
            "shortcuts": [
                [
                    "mpc-hc64.exe",
                    "MPC-HC x64"
                ]
            ]
        },
        "32bit": {
