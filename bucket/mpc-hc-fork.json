            "hash": "eb00d1cea451ad847e15e0368f8588d583c753e6b60534756d1906871d66053b",
            "bin": [
                [
                    "mpc-hc64.exe",
                    "mpc-hc"
                ]
            ],
            "shortcuts": [
                [
                    "mpc-hc64.exe",
                    "MPC-HC x64"
                ]
            ]
        },
        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.1.6/MPC-HC.2.1.6.x86.zip",
