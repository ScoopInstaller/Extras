    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.1.0/MPC-HC.2.1.0.x64.zip",
            "hash": "9b9c3221d5ae209330ca56dbe30bcf93550e8e2b00f18680e8679c8914a90d92",
            "bin": [
                [
                    "mpc-hc64.exe",
                    "mpc-hc"
                ]
            ],
            "shortcuts": [
                [
                    "mpc-hc64.exe",
                    "MPC-HC x64"
                ]
            ]
        },
        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.1.0/MPC-HC.2.1.0.x86.zip",
            "hash": "81f955dcf687b37bd841134cee81f064a140c2cbdab09cd9bc81717eb07c39b1",
            "bin": "mpc-hc.exe",
            "shortcuts": [
                [
                    "mpc-hc.exe",
                    "MPC-HC"
                ]
            ]
        }
    },
    "pre_install": [
        "@('mpc-hc64.ini', 'mpc-hc.ini') | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" -ItemType File | Out-Null }",
        "}"
    ],
    "persist": [
        "mpc-hc64.ini",
        "mpc-hc.ini",
        "default.mpcpl"
    ],
    "checkver": {
        "github": "https://github.com/clsid2/mpc-hc",
        "regex": "(?<tag>[\\d.]+)\\/MPC-HC.([\\d.]+).x64.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/clsid2/mpc-hc/releases/download/$matchTag/MPC-HC.$version.x64.zip"
            },
            "32bit": {
                "url": "https://github.com/clsid2/mpc-hc/releases/download/$matchTag/MPC-HC.$version.x86.zip"
            }
        }
    }
}
