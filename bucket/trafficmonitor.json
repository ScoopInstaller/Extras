            "hash": "8295236fcc9c62564130962005358e3f6b90135d56726f8034bb934562cec58e"
        },
        "32bit": {
            "url": "https://github.com/zhongyang219/TrafficMonitor/releases/download/V1.85.1/TrafficMonitor_V1.85.1_x86.zip",
