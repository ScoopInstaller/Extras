{
    "version": "2.25",
    "description": "GUI client based on v2ray core",
    "homepage": "https://github.com/2dust/v2rayN",
    "license": "GPL-3.0",
    "url": "https://github.com/2dust/v2rayN/releases/download/2.25/v2rayN.zip",
    "hash": "fa915d5fec22cad85ea65edfd920c30340d04a64ead52fe718161978b2242c90",
    "extract_dir": "v2rayN",
    "bin": "v2rayN.exe",
    "persist": [
        "user-wininet.json",
        "config.json"
    ],
    "depends": "v2ray",
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\user-wininet.json\")) {",
        "    New-Item -Force -Path \"$dir\" -Name 'user-wininet.json' -Value '{}' | Out-Null",
        "}",
        "if (!(Test-Path \"$persist_dir\\config.json\")) {",
        "    Copy-Item \"$(appdir v2ray $global)\\current\\config.json\" $dir | Out-Null",
        "}",
        "foreach ($form in @('*.exe', '*.dat', 'vpoint*.json')) {",
        "    foreach ($file in Get-ChildItem \"$(appdir v2ray $global)\\current\" -File) {",
        "        if ($file -Like $form) {",
        "            Write-Host \"Creating hardlink for $file\"",
        "            New-Item -ItemType HardLink -Path $dir -Name $file -Target \"$(appdir v2ray)\\current\\$file\" | Out-Null",
        "        }",
        "    }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/2dust/v2rayN/releases/download/$version/v2rayN.zip"
    }
}
