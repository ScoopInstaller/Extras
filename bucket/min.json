            "hash": "e00a9d6e7652fd4dd40dda83fb8b316016f21503f25f2a1cb9be88d21c9e5c65"
        }
    },
    "installer": {
        "script": [
            "if (!(Test-Path \"$dir\\bin\\*\")) {",
            "    New-Item \"$dir\\bin\" -ItemType Directory | Out-Null",
            "}",
            "Move-Item \"$dir\\Min*\\*\" \"$dir\\bin\"",
            "Remove-Item \"$dir\\Min*\""
        ]
    },
    "post_install": [
        "if (!(Test-Path \"$dir\\profile\\*\") -and (Test-Path \"$env:AppData\\Min\")) {",
        "    info '[Portable Mode]: Copying user data...'",
        "    Copy-Item \"$env:AppData\\Min\\*\" \"$dir\\profile\" -Recurse",
        "}"
    ],
    "bin": [
        [
            "bin\\Min.exe",
            "min",
            "--user-data-dir=\"$dir\\profile\""
        ]
    ],
    "shortcuts": [
        [
            "bin\\Min.exe",
            "Min",
            "--user-data-dir=\"$dir\\profile\""
        ]
    ],
    "persist": "profile",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/minbrowser/min/releases/latest/download/Min-v$version-win32-x64.zip"
    }
}
