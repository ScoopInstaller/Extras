{
    "version": "3.2.2",
    "description": "a feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface.",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/3.2.2/mono/Godot_v3.2.2-stable_mono_win64.zip",
            "hash": "e768392721d6321be1d9cf00996543be8ca727581aa1372cf238647e1650ce30"
        },
        "32bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/3.2.2/mono/Godot_v3.2.2-stable_mono_win32.zip",
            "hash": "e0bfe190d46985829bc334004976597f818e6843531d441b37645d1280fa7170"
        }
    },
    "pre_install": [
        "(Get-ChildItem \"$dir\\Godot_*\\Godot_*.exe\" | Rename-Item -NewName \"godot.exe\");",
        "(Get-ChildItem \"$dir\\Godot_*\\*\" | Move-Item -Destination \"$dir\");",
        "Remove-Item \"$dir\\Godot_*\"",
        "New-Item \"$dir\\_sc_\" -ItemType \"file\" | Out-Null"
    ],
    "bin": "godot.exe",
    "shortcuts": [
        [
            "godot.exe",
            "GodotMono"
        ]
    ],
    "persist": "editor_data",
    "post_install": [
        "if (!(Test-Path \"$persist_dir\\editor_data\\editor_settings-3.tres\") -and (Test-Path \"$Env:AppData\\Godot\\editor_settings-3.tres\")) {Copy-Item -Path \"$Env:AppData\\Godot\\*\" -Destination \"$persist_dir\\editor_data\" -Recurse -Force}"
    ],
    "checkver": {
        "url": "https://godotengine.org/download",
        "regex": "<h2>Godot <em>([\\d.]+)</em></h2>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/$version/mono/Godot_v$version-stable_mono_win64.zip"
            },
            "32bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/$version/mono/Godot_v$version-stable_mono_win32.zip"
            }
        }
    }
}
