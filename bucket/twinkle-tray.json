    "pre_install": [
        "if (Test-Path \"$persist_dir\\twinkle-tray\") {",
        "    Get-ChildItem -Path \"$env:APPDATA\" -Filter \"twinkle-tray\" -Directory | Remove-Item -Force -Recurse",
        "    Move-Item \"$persist_dir\\twinkle-tray\" \"$env:APPDATA\" -Force",
