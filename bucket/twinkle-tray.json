    },
    "bin": [
        [
            "Twinkle Tray.exe",
            "twinkle-tray"
        ]
    ],
    "shortcuts": [
        [
            "Twinkle Tray.exe",
            "Twinkle Tray"
        ]
    ],
    "uninstaller": {
        "script": [
            "if (!(Test-Path \"$persist_dir\")) {",
            "    New-Item \"$persist_dir\" -Type Directory -Force | Out-Null",
            "}",
            "Get-ChildItem -Path \"$persist_dir\" -Filter \"twinkle-tray\" -Directory | Remove-Item -Force -Recurse",
            "Get-ChildItem -Path \"$env:APPDATA\" -Filter \"twinkle-tray\" -Directory | Move-Item -Destination \"$persist_dir\" -Force"
