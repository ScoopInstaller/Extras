{
    "homepage": "https://www.reaper.fm",
    "version": "6.10",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.reaper.fm/dist-agreement.php"
    },
    "description": "Digital Audio Workstation",
    "architecture": {
        "64bit": {
            "url": "https://www.reaper.fm/files/6.x/reaper610_x64-install.exe#/dl.7z",
            "hash": "62c4c724a4c2e33459846bcca0defe7de3c6807f58241db4c20c6423ae988bb6"
        },
        "32bit": {
            "url": "https://www.reaper.fm/files/6.x/reaper610-install.exe#/dl.7z",
            "hash": "9bdf15183e39214db0e2129833b25ffcea535ab00ddf4478e0fb84f317df7489"
        }
    },
    "bin": [
        "reaper.exe",
        "reamote.exe"
    ],
    "shortcuts": [
        [
            "reaper.exe",
            "Reaper"
        ],
        [
            "reamote.exe",
            "ReaMote"
        ]
    ],
    "installer": {
        "script": [
            "Move-Item \"$dir\\`$INSTDIR`$_8_\\*\" -Destination \"$dir\"",
            "Remove-Item \"$dir\\`$*\", \"$dir\\Uninst*\" -Recurse -Force",
            "if (-not (Test-Path \"$persist_dir\\reaper*.ini\")) {",
            "    if (Test-Path \"$env:APPDATA\\REAPER\") {",
            "        Move-Item \"$env:APPDATA\\REAPER\\*.ini\" \"$dir\"",
            "        Remove-Item \"$env:APPDATA\\REAPER\" -Recurse",
            "    } else {",
            "        Set-Content \"$dir\\reaper.ini\" '[REAPER]', 'wnd_state=0' -Encoding Ascii",
            "        'fxtags', 'midihw', 'mouse', 'reginfo2' | ForEach-Object { New-Item \"$dir\\reaper-$_.ini\" | Out-Null }",
            "    }",
            "}"
        ]
    },
    "persist": [
        "UserPlugins",
        "reaper.ini",
        "reaper-fxtags.ini",
        "reaper-midihw.ini",
        "reaper-mouse.ini",
        "reaper-reginfo2.ini"
    ],
    "checkver": {
        "url": "https://www.reaper.fm/download.php",
        "regex": "Version ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.reaper.fm/files/$majorVersion.x/reaper$cleanVersion_x64-install.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://www.reaper.fm/files/$majorVersion.x/reaper$cleanVersion-install.exe#/dl.7z"
            }
        }
    },
    "notes": "The portable version of Reaper does not include ReWire."
}
