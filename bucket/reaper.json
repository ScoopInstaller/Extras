{
    "homepage": "https://www.reaper.fm",
    "version": "6.01",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.reaper.fm/dist-agreement.php"
    },
    "description": "Digital Audio Workstation",
    "architecture": {
        "64bit": {
            "url": "https://www.reaper.fm/files/6.x/reaper601_x64-install.exe#/dl.7z",
            "hash": "c5440cd6e2bd692045fd07a09d0645fc06eea8a6fbe3311efa2c6053d2554814"
        },
        "32bit": {
            "url": "https://www.reaper.fm/files/6.x/reaper601-install.exe#/dl.7z",
            "hash": "4e8363d23d1fb3b204fe356ac8b37108f72e749a241833d51783a3ada8fcaf00"
        }
    },
    "bin": [
        "reaper.exe",
        "reamote.exe"
    ],
    "shortcuts": [
        [
            "reaper.exe",
            "Reaper"
        ],
        [
            "reamote.exe",
            "ReaMote"
        ]
    ],
    "installer": {
        "script": [
            "Move-Item \"$dir\\`$INSTDIR`$_8_\\*\" -Destination \"$dir\"",
            "Remove-Item \"$dir\\`$*\", \"$dir\\Uninst*\" -Recurse -Force",
            "New-Item -ItemType \"file\" -Path \"$dir\" -Name \"reaper.ini\" -Value \"[REAPER]\nwnd_state=0\n\" | Out-Null",
            "New-Item -ItemType \"file\" -Path \"$dir\" -Name \"reaper-fxtags.ini\" | Out-Null",
            "New-Item -ItemType \"file\" -Path \"$dir\" -Name \"reaper-midihw.ini\" | Out-Null",
            "New-Item -ItemType \"file\" -Path \"$dir\" -Name \"reaper-mouse.ini\" | Out-Null",
            "New-Item -ItemType \"file\" -Path \"$dir\" -Name \"reaper-reginfo2.ini\" | Out-Null"
        ]
    },
    "post_install": [
            "if (Test-Path \"$dir\\reaper.ini.original\") { Remove-Item \"$dir\\reaper.ini.original\" }",
            "if (Test-Path \"$dir\\reaper-fxtags.ini.original\") { Remove-Item \"$dir\\reaper-fxtags.ini.original\" }",
            "if (Test-Path \"$dir\\reaper-midihw.ini.original\") { Remove-Item \"$dir\\reaper-midihw.ini.original\" }",
            "if (Test-Path \"$dir\\reaper-mouse.ini.original\") { Remove-Item \"$dir\\reaper-mouse.ini.original\" }",
            "if (Test-Path \"$dir\\reaper-reginfo2.ini.original\") { Remove-Item \"$dir\\reaper-reginfo2.ini.original\" }"
    ],
    "persist": [
        "UserPlugins",
        "reaper.ini",
        "reaper-fxtags.ini",
        "reaper-midihw.ini",
        "reaper-mouse.ini",
        "reaper-reginfo2.ini"
    ],
    "checkver": {
        "url": "https://www.reaper.fm/download.php",
        "regex": "Version ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.reaper.fm/files/$majorVersion.x/reaper$cleanVersion_x64-install.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://www.reaper.fm/files/$majorVersion.x/reaper$cleanVersion-install.exe#/dl.7z"
            }
        }
    },
    "notes": "The portable version of Reaper does not include ReWire."
}
