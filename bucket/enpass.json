{
    "homepage": "https://www.enpass.io/",
    "version": "6.1.0.407",
    "url": "https://dl.enpass.io/stable/windows/package/EnpassPackage-6.1.0.407.zip",
    "hash": "dbc3c7e814314fdd2e98e52c46cce0d1a936cf3223d7bf13086b584c1f181d47",
    "bin": "Enpass.exe",
    "installer": {
        "script": [
            "Expand-DarkArchive \"$dir\\Enpass-setup.exe\" \"$dir\\tmp\"",
            "Expand-MsiArchive \"$dir\\tmp\\AttachedContainer\\Enpass.msi\" \"$dir\\tmp\" | Out-Null",
            "movedir \"$dir\\tmp\\PFiles\\Enpass\" \"$dir\" | Out-Null"
        ]
    },
    "post_install": [
        "$cmd = '\"' + \"$(appdir enpass $global)\\current\\Enpass.exe\" + '\" \"%1\"'",
        "ForEach ($urlh in @('enpass', 'enpassauth', 'enpasscard', 'enpassstart')){",       
        "  $RKey = \"HKCU:Software\\Classes\"",
        "  New-Item         -Path $RKey -Name $urlh -Force | Out-null",
        "  $RKey = $RKey + '\\' + $urlh",
        "  Set-Item         -Path $RKey -Value \"URL:$urlh Protocol\" -Force | Out-null",
        "  New-ItemProperty -Path $RKey -Name 'URL Protocol' -Force | Out-null",
        "  New-Item         -Path $RKey -Name 'shell\\open\\command' -Force | Out-null",
        "  Set-Item         -Path ($RKey + '\\shell\\open\\command') -Value $cmd -Force | Out-null",
        "}"
    ],
    "uninstaller": {
        "script": [
            "ForEach ($urlh in @('enpass', 'enpassauth', 'enpasscard', 'enpassstart')){ Remove-Item -Force -Recurse -ErrorAction Ignore -Path \"HKCU:Software\\Classes\\$urlh\" }"
        ]
    },
    "shortcuts": [
        [
            "Enpass.exe",
            "Enpass"
        ]
    ],
    "checkver": {
        "url": "https://dl.sinew.in/windows/package/appcast.xml",
        "re": "EnpassPackage-([\\d.]+).zip"
    },
    "autoupdate": {
        "url": "https://dl.enpass.io/stable/windows/package/EnpassPackage-$version.zip"
    }
}
