    "installer": {
        "script": [
            "if (Test-Path \"$persist_dir\\die.ini\") { Copy-Item \"$persist_dir\\die.ini\" \"$dir\" -Force }",
            "if (Test-Path \"$persist_dir\\diec.ini\") { Copy-Item \"$persist_dir\\diec.ini\" \"$dir\" -Force }"
        ]
    },
    "uninstaller": {
        "script": [
            "New-Item \"$persist_dir\" -ItemType Directory -ErrorAction SilentlyContinue | Out-Null",
            "if (Test-Path \"$dir\\die.ini\") { Copy-Item \"$dir\\die.ini\" \"$persist_dir\" -Force }",
            "if (Test-Path \"$dir\\diec.ini\") { Copy-Item \"$dir\\diec.ini\" \"$persist_dir\" -Force }"
        ]
    },
    "bin": [
        "die.exe",
        "diel.exe",
        "diec.exe"
    ],
