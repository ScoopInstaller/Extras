        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/128.9.2esr/win32/en-US/Thunderbird%20Setup%20128.9.2esr.exe#/dl.7z",
            "hash": "sha512:9f9f98777e7b2a4a906287dc42ea21de8b3ebe2e65239a4f5ed70138c22bc217ba9b9cc0b4708334e36d1f13e6a9fd3d418ddf220fa3a2c4a6a8febab0a87a14"
