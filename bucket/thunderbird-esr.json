        "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-and-remove-thunderbird-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/140.3.1esr/win64/en-US/Thunderbird%20Setup%20140.3.1esr.exe#/dl.7z",
            "hash": "sha512:5d6e5474222b87577c15889656daa9f241fe8baf43643dcd8dea1fa8662e09485ce7ab7a814804d4d770fe3468c02a2db9c6119c1098b091b55400d6229a5bea"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/140.3.1esr/win32/en-US/Thunderbird%20Setup%20140.3.1esr.exe#/dl.7z",
            "hash": "sha512:a2c71327ccf5d76a7cca968c6665bb607d8ef4dc9f600c08f14430b1982e7fdc9ca55883ff264bee6350f87ed43171b132c2b662e8a57a0b806e0f13839d6a94"
