            "hash": "sha512:8dd00eeba82c923d92c141c4dd393f43a6d365bdf5dbe97b3d8b36a23f9579e8a6fe46a943a58b5f24712efc7ec802c2d30842a3b3b4f0c660229ab71d5fb442"
