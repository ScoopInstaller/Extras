        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/140.3.0esr/win32/en-US/Thunderbird%20Setup%20140.3.0esr.exe#/dl.7z",
            "hash": "sha512:f685478ca9da0206ff82e7f3f23b7f00ec2b2f171661b90a680c9d5307c0f84d715109a936dc23585b72f78aa9f6b72aa4feb5fdbba4f6b62e1661de9cea47c0"
