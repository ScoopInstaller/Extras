            "Cider.exe",
            "Cider"
        ]
    ],
    "checkver": {
        "github": "https://github.com/ciderapp/cider-releases"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ciderapp/cider-releases/releases/download/v$version/Cider-Setup-winget-$version.exe#/dl.7z",
                "hash": {
                    "url": "$baseurl/latest.yml",
                    "regex": "sha512:\\s+$base64"
                }
            }
        }
    }
