    "pre_install": [
        "$major = $version -split '\\.' | Select-Object -First 1",
        "Get-ChildItem \"$dir\" 'l*.exe' | ForEach-Object {",
        "         # $1 is needed to not remove character",
        "    $newName = $_.Basename -replace \"([^8])$major\", '$1'",
        "    Rename-Item $_.Fullname ($newName + $_.Extension)",
        "}"
    ],
