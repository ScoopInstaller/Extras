    "license": "GPL-2.0-only|LGPL-2.0-only|MPL-1.1",
    "version": "8.3.0.0-371",
    "url": [
        "https://downloads.sourceforge.net/project/pentaho/Pentaho%208.3/client-tools/psw-ce-8.3.0.0-371.zip",
        "https://gist.githubusercontent.com/edgardmessias/13b3ed8b356a7bc5bc113f7a1a8ede35/raw/psw.ico"
    ],
    "hash": [
