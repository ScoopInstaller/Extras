{
    "version": "2.1.2",
    "description": "Graphical frontend for v2ray",
    "homepage": "https://github.com/Qv2ray/Qv2ray",
    "license": "GPL-3.0-or-later",
    "depends": "v2ray",
    "suggest": {
        "vcredist": "extras/vcredist2019"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Qv2ray/Qv2ray/releases/download/v2.1.2/Qv2ray.v2.1.2.Windows-x64.qt5.13.2.7z",
            "hash": "14c209b27899d210d7c06a3fb827991855702f5d75922078f2b41ccae2c97915"
        },
        "32bit": {
            "url": "https://github.com/Qv2ray/Qv2ray/releases/download/v2.1.2/Qv2ray.v2.1.2.Windows-x86.qt5.13.2.7z",
            "hash": "b1097d84bc4a7a9e1f0780788f6813757930e3fa50a3b845ced669cdd61db6ad"
        }
    },
    "extract_dir": "deployment",
    "bin": "qv2ray.exe",
    "shortcuts": [
        [
            "qv2ray.exe",
            "qv2ray"
        ]
    ],
    "persist": "config",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config\\Qv2ray.conf\")) {",
        "    @{",
        "        'config_version' = 11",
        "        'kernelConfig' = @{",
        "            'v2CorePath_win' = \"$scoopdir\\apps\\v2ray\\current\\v2ray.exe\"",
        "            'v2AssetsPath_win' = \"$scoopdir\\apps\\v2ray\\current\"",
        "        }",
        "    } | ConvertTo-Json -Depth 20 | Out-File \"$dir\\config\\Qv2ray.conf\" -Encoding ascii",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/Qv2ray/releases/download/v$version/Qv2ray.v$version.Windows-x64.qt5.13.2.7z"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/Qv2ray/releases/download/v$version/Qv2ray.v$version.Windows-x86.qt5.13.2.7z"
            }
        }
    }
}
