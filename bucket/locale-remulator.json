{
    "version": "1.6.0",
    "description": "System Region and Language Simulator with x64 support.",
    "homepage": "https://github.com/InWILL/Locale_Remulator",
    "license": "LGPL-3.0-only",
    "notes": [
        "To install the context menu, run 'install-context.ps1' inside the app directory (or run LRInstaller.exe).",
        "To uninstall the context menu, run 'uninstall-context.ps1'."
    ],
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/InWILL/Locale_Remulator/releases/download/v1.6.0/Locale_Remulator.1.6.0.zip",
            "hash": "f7f7b4ed8ef5bf1b25d46eb6cbf10d0a01dddfe5030ae09f8a1e73c5ad3c1b02"
        }
    },
    "extract_dir": "Locale_Remulator.1.6.0",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\LRConfig.xml\")) {",
        "    $content = @(",
        "        '<LRConfig><Profiles Type=\"exe\">'",
        "        '<Profile Name=\"Run in Japanese\" Guid=\"11111111-1111-1111-1111-111111111111\"><Location>ja-JP</Location><CodePage>932</CodePage><LCID>1041</LCID><TimeZone>Tokyo Standard Time</TimeZone><Bias>540</Bias><RunAsAdmin>false</RunAsAdmin><HookIME>false</HookIME><HookLCID>true</HookLCID></Profile>'",
        "        '<Profile Name=\"Run in Japanese (Admin)\" Guid=\"22222222-2222-2222-2222-222222222222\"><Location>ja-JP</Location><CodePage>932</CodePage><LCID>1041</LCID><TimeZone>Tokyo Standard Time</TimeZone><Bias>540</Bias><RunAsAdmin>true</RunAsAdmin><HookIME>true</HookIME><HookLCID>true</HookLCID></Profile>'",
        "        '<Profile Name=\"Run in Taiwan (Admin)\" Guid=\"33333333-3333-3333-3333-333333333333\"><Location>zh-TW</Location><CodePage>950</CodePage><LCID>1028</LCID><TimeZone>Taipei Standard Time</TimeZone><Bias>480</Bias><RunAsAdmin>true</RunAsAdmin><HookIME>true</HookIME><HookLCID>true</HookLCID></Profile>'",
        "        '<Profile Name=\"Run in Korean (Admin)\" Guid=\"44444444-4444-4444-4444-444444444444\"><Location>ko-KR</Location><CodePage>949</CodePage><LCID>1042</LCID><TimeZone>Korea Standard Time</TimeZone><Bias>540</Bias><RunAsAdmin>true</RunAsAdmin><HookIME>true</HookIME><HookLCID>true</HookLCID></Profile>'",
        "        '</Profiles></LRConfig>'",
        "    )",
        "    Set-Content \"$dir\\LRConfig.xml\" -Value $content -Encoding Ascii",
        "}"
    ],
    "persist": "LRConfig.xml",
    "post_install": [
        "if (!(Test-Path \"$dir\\install-context.ps1\")) {",
        "    Set-Content \"$dir\\install-context.ps1\" -Value 'Start-Process \"$PSScriptRoot\\ServerRegistrationManager.exe\" -ArgumentList \"install `\"$PSScriptRoot\\LRSubMenus.dll`\" -codebase\" -Verb RunAs -Wait' -Encoding Ascii",
        "}",
        "if (!(Test-Path \"$dir\\uninstall-context.ps1\")) {",
        "    Set-Content \"$dir\\uninstall-context.ps1\" -Value 'Start-Process \"$PSScriptRoot\\ServerRegistrationManager.exe\" -ArgumentList \"uninstall `\"$PSScriptRoot\\LRSubMenus.dll`\"\" -Verb RunAs -Wait' -Encoding Ascii",
        "}"
    ],
    "bin": [
        "LREditor.exe",
        [
            "LRInstaller.exe",
            "LRInstaller"
        ]
    ],
    "shortcuts": [
        [
            "LREditor.exe",
            "Locale Remulator"
        ]
    ],
    "checkver": {
        "github": "https://github.com/InWILL/Locale_Remulator"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/InWILL/Locale_Remulator/releases/download/v$version/Locale_Remulator_$version.zip",
                "extract_dir": "Locale_Remulator.$version"
            }
        }
    }
}
