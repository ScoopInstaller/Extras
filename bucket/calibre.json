            "Calibre LRF Viewer"
        ]
    ],
    "persist": [
        "Calibre Library",
        "Calibre Settings"
    ],
    "checkver": {
        "github": "https://github.com/kovidgoyal/calibre"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.calibre-ebook.com/$version/calibre-portable-installer-$version.exe",
                "hash": {
