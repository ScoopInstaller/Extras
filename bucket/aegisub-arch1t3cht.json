        [
            "aegisub.exe",
            "Aegisub"
        ]
    ],
    "persist": [
        "autoback",
        "autosave",
        "config"
    ],
    "checkver": {
        "github": "https://github.com/arch1t3cht/Aegisub",
        "jsonpath": "$.tag_name",
        "regex": "^feature_([0-9]+)$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
