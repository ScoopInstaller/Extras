    "license": {
        "identifier": "Shareware",
        "url": "https://www.sublimetext.com/eula"
    },
    "post_install": [
        "if (Test-Path \"$dir\\sublime-text-install-context.reg\") {",
        "  $sublimepath = \"$dir\\sublime_text.exe\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\sublime-text-install-context.reg\"",
        "  $content = $content.Replace('$sublime', $sublimepath)",
        "  if ($global) {",
        "    $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "  }",
        "  $content | Set-Content -Path \"$dir\\sublime-text-install-context.reg\"",
        "}",
        "if (Test-Path \"$dir\\sublime-text-uninstall-context.reg\") {",
        "  $content = Get-Content \"$dir\\sublime-text-uninstall-context.reg\"",
        "  if ($global) {",
        "    $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "  }",
        "  $content | Set-Content -Path \"$dir\\sublime-text-uninstall-context.reg\"",
        "}"
    ],
