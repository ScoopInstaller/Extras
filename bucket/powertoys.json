    "architecture": {
        "64bit": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.45.0/PowerToysSetup-0.45.0-x64.exe",
            "hash": "bc1c7eda2eb80f3780c27467fef65c774e2008da908a4ca5c7c2ad87750735df",
            "pre_install": [
                "$dotnet_exists = (Get-Command dotnet -ErrorAction SilentlyContinue)",
                "if (($null -eq $dotnet_exists) -eq $false) {",
                "    $dotnet_runtime = (dotnet --list-runtimes)",
                "    if (($null -eq $dotnet_runtime) -eq $false) {",
                "        echo \".NET Core exists\"",
                "    } else {",
                "        echo \".NET Core doesn't exist, installing...\"",
                "        &powershell -NoProfile -ExecutionPolicy unrestricted -Command \"[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; &([scriptblock]::Create((Invoke-WebRequest -UseBasicParsing 'https://dot.net/v1/dotnet-install.ps1'))) -Runtime dotnet\"",
                "    }",
                "} else {",
                "echo \".NET Core doesn't exist, installing...\"",
                "&powershell -NoProfile -ExecutionPolicy unrestricted -Command \"[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; &([scriptblock]::Create((Invoke-WebRequest -UseBasicParsing 'https://dot.net/v1/dotnet-install.ps1'))) -Runtime dotnet\"",
                "}"
            ],
            "installer": {
                "args": "--silent --no_start_pt --skip_dotnet_install --install_dir $env:SCOOP\\apps\\powertoys\\0.45.0"
            },
            "uninstaller": {
                "script": "C:\\Windows\\System32\\msiexec.exe /X\"{B3A4E585-5157-49AE-98FA-234D2E1BDD75}\" /quiet"
            }
        }
    },
    "shortcuts": [
        [
            "PowerToys.exe",
            "PowerToys"
        ]
    ],
    "checkver": {
        "github": "https://github.com/microsoft/PowerToys"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/microsoft/PowerToys/releases/download/v$version/PowerToysSetup-$version-x64.exe",
                "installer": {
                    "args": "--silent --no_start_pt --install_dir $env:SCOOP\\apps\\powertoys\\$version"
                }
            }
        }
    }
}
