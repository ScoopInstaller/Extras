{
    "version": "3.2.8",
    "description": "Cross-platform GUI toolkit for creating native applications",
    "homepage": "https://www.wxwidgets.org/",
    "license": {
        "identifier": "wxWindows Library Licence",
        "url": "https://github.com/wxWidgets/wxWidgets/blob/master/docs/licence.txt"
    },
    "notes": [
        "wxWidgets has been installed to $dir by extracting the installer.",
        "Environment variables WXWIN and wxWidgets_ROOT_DIR have been set.",
        "Include headers are in: $dir\\include",
        "Libraries are in: $dir\\lib",
        "For development, use the libraries in lib\\vc_lib (static) or lib\\vc_dll (dynamic)"
    ],
    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.2.8/wxMSW-3.2.8-Setup.exe",
    "hash": "sha256:a525ed70885e5cf2cbc15b9f90a7b78962eccca199fbff6b9d58c0ad71e1a4aa",
    "innosetup": true,
    "post_install": [
        "Write-Host 'Cleaning up installation files...'",
        "Remove-Item \"$dir\\unins*\" -Recurse -Force -ErrorAction SilentlyContinue",
        "Write-Host 'wxWidgets has been successfully extracted and cleaned.'"
    ],
    "env_set": {
        "WXWIN": "$dir",
        "wxWidgets_ROOT_DIR": "$dir"
    },
    "checkver": {
        "url": "https://wxwidgets.org/downloads/",
        "regex": "Latest Stable Release:\\s*([0-9]+(?:\\.[0-9]+)*)"
    },
    "autoupdate": {
        "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v$version/wxMSW-$version-Setup.exe"
    }
}
