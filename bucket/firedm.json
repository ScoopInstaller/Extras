{
    "version": "2022.2.5",
    "description": "Multi-connections download manager",
    "homepage": "https://github.com/firedm/FireDM",
    "license": "LGPL-3.0-only",
    "url": "https://github.com/firedm/FireDM/releases/download/2022.2.5/FireDM_2022.2.5.zip",
    "hash": "03CB296C3E54C2CEE80B16E1E91708250A7FEE6D338F9BE88ACF9414429210A0",
    "extract_dir": "FireDM",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\downloads.dat\")) {",
        "    Set-Content \"$dir\\downloads.dat\" -Value '{}' -Encoding Ascii",
        "}",
		"if (!(Test-Path \"$persist_dir\\setting.cfg\")) {",
        "    Set-Content \"$dir\\setting.cfg\" -Value '{ \"check_for_update\": false }' -Encoding Ascii",
        "}",
		"if (!(Test-Path \"$persist_dir\\thumbnails.dat\")) {",
        "    Set-Content \"$dir\\thumbnails.dat\" -Value '{}' -Encoding Ascii",
        "}",
		"if (!(Test-Path \"$persist_dir\\user_themes.cfg\")) {",
        "    Set-Content \"$dir\\user_themes.cfg\" -Value '{}' -Encoding Ascii",
        "}"
    ],
	"persist": [
        "downloads.dat",
        "setting.cfg",
		"thumbnails.dat",
		"user_themes.cfg"
    ],
    "bin": "firedm.exe",
    "shortcuts": [
        [
            "FireDM-GUI.exe",
            "FireDM-GUI"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/firedm/FireDM/releases/download/$version/FireDM_$version.zip"
    }
}