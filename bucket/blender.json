    "persist": "portable",
    "checkver": {
        "url": "https://download.blender.org/release/",
        "regex": "blender-([\\w.]+)-windows-x64\\.zip",
        "script": [
            "function Find-ReleaseFiles {",
            "    param (",
            "        [string]$htmlContent",
            "    )",
            "    return ([regex]'<a\\s+[^>]*?href=\"([^\"]+)\"[^>]*?>(?<Name>blender-(?<Version>\\d+\\.\\d+\\.\\d+)-windows-x64\\.zip)</a>').Matches($htmlContent) |",
            "    ForEach-Object {",
            "        [PSCustomObject]@{",
            "            Name    = $_.Groups['Name'].Value",
            "            Version = [version]$_.Groups['Version'].Value",
            "        }",
            "    }",
            "}",
            "try {",
            "    if (-not $url) {",
            "        throw \"checkver.url is not defined\"",
            "    }",
            "    if ($expected_ver -notmatch '^\\d+\\.\\d+(\\.\\d+)?$') { ",
            "        throw \"$expected_ver not match X.Y.Z\" ",
            "    }",
            "    $expectedVersion = [version]$expected_ver",
            "    $expectedBaseVersion = [version]\"$($expectedVersion.Major).$($expectedVersion.Minor).0\"",
            "    $results = if ($url -match \"^https://download.blender.org/release/Blender(?<Version>\\d+\\.\\d+)/$\") {",
            "        $urlReleaseVersion = [version]\"$($Matches['Version']).0\"",
            "        if ($urlReleaseVersion -ne $expectedBaseVersion) {",
            "            throw \"URL version $urlReleaseVersion does not match expected base version $expectedBaseVersion\"",
            "        }",
            "        Find-ReleaseFiles -htmlContent $page",
            "    }",
            "    elseif ($url -eq \"https://download.blender.org/release/\") {",
            "        ([regex]'<a\\s+[^>]*?href=\"([^\"]+)\"[^>]*?>(?<Path>Blender(?<Version>\\d+\\.\\d+))/</a>').Matches($page) |",
            "        ForEach-Object { ",
            "            [PSCustomObject]@{",
            "                Path    = $_.Groups['Path'].Value",
            "                Version = [version]\"$($_.Groups['Version'].Value).0\"",
            "            }",
            "        } |",
            "        Where-Object { $_.Version -ge $expectedBaseVersion } |",
            "        Sort-Object -Property Version -Descending |",
            "        ForEach-Object {",
            "            $folder = $_",
            "            $releaseHtmlContent = (Invoke-WebRequest -Uri \"https://download.blender.org/release/$($folder.Path)/\" -UseBasicParsing).Content",
            "            $files = Find-ReleaseFiles -htmlContent $releaseHtmlContent",
            "            [PSCustomObject]@{",
            "                FolderVersion = $folder.Version",
            "                Files         = $files",
            "            }",
            "        } |",
            "        Where-Object { $_.Files.Count -gt 0 } |",
            "        Select-Object -First 1 |",
            "        ForEach-Object { $_.Files }",
            "    } else {",
            "        throw \"Unsupported checkver.url: $url\"",
            "    }",
            "    $results = $results | Where-Object { $_.Version -ge $expectedVersion } ",
            "    if ($results.Count -eq 0) {",
            "        throw \"No suitable version found >= $expectedVersion\"",
            "    }",
            "    $results | Sort-Object -Property Version -Descending | Join-String -Property Name -Separator \"`r`n\"",
            "}",
            "catch {",
            "    Write-Error \"$app checkver failed: $($_.Exception.Message)\"",
            "}"
        ]
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.blender.org/release/Blender$majorVersion.$minorVersion/blender-$version-windows-x64.zip",
                "extract_dir": "blender-$version-windows-x64"
            },
            "arm64": {
                "url": "https://download.blender.org/release/Blender$majorVersion.$minorVersion/blender-$version-windows-arm64.zip",
                "extract_dir": "blender-$version-windows-arm64"
            }
        },
        "hash": {
            "url": "$baseurl/blender-$version.sha256"
        }
    }
}
