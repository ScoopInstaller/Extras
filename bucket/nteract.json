{
    "version": "0.28.0",
    "description": "Nteract and create with data, words, and visuals.",
    "homepage": "https://nteract.io",
    "license": "BSD-3-Clause",
    "notes": "Instructions for downloading more kernels can be found at: https://nteract.io/kernels",
    "architecture": {
        "64bit": {
            "url": "https://github.com/nteract/nteract/releases/download/v0.28.0/nteract-setup-0.28.0.exe#/dl.7z",
            "hash": "sha512:de11016857e658bea32dcd23d34169005b05d673db18caf2a266a3295c43949a071abf0a3c2a6142d5eb4d2d590918b0e44976e05bbf9a3a0b54ca15b47d99a0",
            "installer": {
                "script": [
                    "# Check if Python 3 is installed and in PATH",
                    "$result = Get-Command 'python3' -ErrorAction SilentlyContinue",
                    "if ($result) { $python = 'python3' }",
                    "if (!$result) {",
                    "    $python = 'python'",
                    "    # note: Errors of Invoke-Expression cannot be omitted by -ErrorAction switch",
                    "    $response = Invoke-Expression 'python --version' 2>&1",
                    "    if (!$response) {error 'Could not find python.exe or python3.exe. Please make sure Python is installed and added to PATH.'; break }",
                    "    if (!($response -match 'Python\\s+([\\d.]+)')) { error 'Could not match Python version from python.exe.'; break }",
                    "    # note: Powershell 5 does not support casting int/float to System.Version",
                    "    $python_ver = [Version]::new($matches[1])",
                    "    if ($python_ver.Major -lt 3) { error \"$app only supports Python 3. (Python $python_ver detected) Please make sure Python 3 is installed and added to PATH.\"; break }",
                    "}",
                    "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                    "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall*\" -Force -Recurse",
                    "info 'Installing ipykernel for Python3...'",
                    "Invoke-Expression \"$python -m pip install ipykernel\"",
                    "Invoke-Expression \"$python -m ipykernel install --user\""
                ]
            }
        }
    },
    "bin": "nteract.exe",
    "shortcuts": [
        [
            "nteract.exe",
            "nteract"
        ]
    ],
    "checkver": {
        "github": "https://github.com/nteract/nteract"
    },
    "autoupdate": {
        "url": "https://github.com/nteract/nteract/releases/download/v$version/nteract-setup-$version.exe#/dl.7z",
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512: $base64"
        }
    }
}
