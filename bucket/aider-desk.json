    "homepage": "https://github.com/hotovo/aider-desk",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hotovo/aider-desk/releases/download/v0.45.0/aider-desk-0.45.0-setup.exe#/dl.7z",
            "hash": "sha512:1d059724dbf1318cc33c358f85fb876b9559d349bf4f0bba66d2331fd827f6577bedc5364796b28badd74f11b355dfcadf6187f43fa9092eb336b814542403ae",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
