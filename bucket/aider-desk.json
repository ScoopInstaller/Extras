    "description": "Desktop application for Aider AI assistant",
    "homepage": "https://github.com/hotovo/aider-desk",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/hotovo/aider-desk/releases/download/v0.50.0/aider-desk-0.50.0-setup.exe#/dl.7z",
            "hash": "sha512:0d01433ceb8198910a914b617c039fecbbdb0119e87830f0f13a079c93469439362cefb65ce84bb7269c5bdcf0de7e456745b66aa2049f5ca66920003c11e42d",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
