{
    "homepage": "http://lighttpd.dtech.hu/",
    "description": "An HTTP server designed and optimized for high performance environments. Here is the Cygwin compilation migrated from WLMP project",
    "version": "1.4.49-1",
    "license": "BSD-3-Clause",
    "architecture": {
        "64bit": {
            "url": "http://lighttpd.dtech.hu/lighttpd-1.4.49-1-win64-ssl.zip",
            "hash": {
                "url": "http://lighttpd.dtech.hu/lighttpd-1.4.49-1-win64-ssl.md5"
            }
        },
        "32bit": {
            "url": "http://lighttpd.dtech.hu/lighttpd-1.4.49-1-win32-ssl.zip",
            "hash": {
                "url": "http://lighttpd.dtech.hu/lighttpd-1.4.49-1-win32-ssl.md5"
            }
        }
    },
    "extract_dir": "lighttpd",
    "pre_install": "Write-Host -ForegroundColor DarkCyan 'For Cygwin users lighttpd package is provided in Cygwin, under which this standalone compilation were made.'",
    "bin": [
        "lighttpd.exe",
        [
            "lighttpd-service-install.exe",
            "Install-LighttpdService"
        ],
        [
            "lighttpd-service-remove.exe",
            "Remove-LighttpdService"
        ]
    ],
    "persist": [
        "conf",
        "htdocs",
        "logs",
        "tmp"
    ],
    "checkver": "Package Version:          (?<version>((\\d+\\.)+\\d+(-\\d)?))&#x0d;&#x0a;",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://lighttpd.dtech.hu/lighttpd-$matchVersion-win64-ssl.zip",
                "hash": "$url.md5"
            },
            "32bit": {
                "url": "http://lighttpd.dtech.hu/lighttpd-$matchVersion-win32-ssl.zip",
                "hash": "$url.md5"
            }
        }
    }
}
